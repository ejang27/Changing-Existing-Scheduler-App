<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_repeat_never"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="48dip"
            android:text="No Repeat" />

        <Button
            android:id="@+id/bt_repeat_everyday"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="48dip"
            android:text="Every Day" />

        <Button
            android:id="@+id/bt_repeat_everyweek"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="48dip"
            android:text="Every Week" />

        <Button
            android:id="@+id/bt_repeat_everymonth"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="48dip"
            android:text="Every Month" />

        <Button
            android:id="@+id/bt_repeat_everyyear"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="48dip"
            android:text="Every Year" />

    </LinearLayout>

</LinearLayout>